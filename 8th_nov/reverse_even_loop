public class reverse_even {
    public static void main(String[] args) {
        for (int i=10;i>=2;i--)
        {
            if (i%2==0)
            {
                System.out.println(i);
            }
        }
    }
}

public class reverse_even {
    public static void main(String[] args) {
        int num=10;
        while (num>=1)
        {
            if (num%2==0)
            {
                System.out.println(num);
            }
            num--;
        }
    }
}
