public class reverse_pyramid {
    public static void main(String args[]) {

        int n=5;
        int l=1;
        for(int i=n;i>=1;i--) {
            for(int j=1;j<=n-i;j++) {
                System.out.print(" ");
            }
            for(int k=1;k<=i;k++) {
                System.out.print(l+" ");
            }
            System.out.println();
            l++;
        }
    }
}
